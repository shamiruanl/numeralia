        font-size: 16px;
        font-weight: 600;
    }

    .card-value {
        font-size: 24px;
        font-weight: 700;
    }

    .card-percentage {
        font-size: 14px;
    }

    .positive {
        color: #0acf97;
    }

    .negative {
        color: #fa5c7c;
    }
