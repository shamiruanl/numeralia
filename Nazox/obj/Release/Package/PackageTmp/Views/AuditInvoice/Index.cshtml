<!-- Solicitud de Servicio -->
<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 col-xxl-12">
        <div class="card">
            <div class="card-header" style="background-color: #59719d; padding: 5px 5px 5px 5px;">
