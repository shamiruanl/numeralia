                    <div class="col-xl-6">
                        <h4 class="card-title" style="color:#FFF;margin:0; margin:3px;">Filtros</h4>
                    </div>
                    <div class="col-xl-6" style="text-align:right;">
                        <button type="button" class="btn btn-light waves-effect waves-light" style="height: 25px; line-height: 0;">Nuevo Registro</button>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-xl-3">
                            <div class="mb-3">
                                <label class="form-label" for="factura">Producto / Servicio</label>
                                <input id="" name="factura" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-xl-3">
                            <div class="mb-3">
                                <label class="form-label" for="factura">Fecha y hora</label>
                                <input id="" name="factura" type="datetime" class="form-control">
                            </div>
                        </div>
                        <div class="col-xl-3">
                            <div class="mb-3">
                                <label class="form-label" for="factura">Comprador</label>
                                <input id="" name="factura" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-xl-3">
                            <div class="mb-3">
                                <label class="form-label" for="factura">Tipo de contacto</label>
                                <input id="" name="factura" type="text" class="form-control">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

